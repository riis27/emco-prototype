{% comment %}
sections/hero-video.liquid
Hero video section for EmCo Esthetics
{% endcomment %}

<section class="emco-hero-video section-padding" data-emco-reveal>
  <div class="emco-hero-video__media">
    <video
      class="emco-hero-video__video"
      autoplay
      muted
      loop
      playsinline
      {% if section.settings.poster_image != blank %}
        poster="{{ section.settings.poster_image | image_url: width: 1600 }}"
      {% endif %}
    >
      {% if section.settings.video_url != blank %}
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      {% endif %}
      Your browser does not support the video tag.
    </video>
    {% if section.settings.show_overlay %}
      <div class="emco-hero-video__overlay"></div>
    {% endif %}
  </div>

  <div class="page-width emco-hero-video__content">
    <div class="emco-hero-video__text card-glass">
      {% if section.settings.eyebrow != blank %}
        <p class="emco-hero-video__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1 class="emco-hero-video__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="emco-hero-video__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      <div class="emco-hero-video__buttons">
        {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
          <a href="{{ section.settings.primary_link }}" class="btn-iris">
            {{ section.settings.primary_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
          <a href="{{ section.settings.secondary_link }}" class="btn-ghost">
            {{ section.settings.secondary_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero video (EmCo)",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Cincinnati Acne + Glow Studio"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Clear skin, trippy glow."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Results-driven acne management, Hydrafacial, and customized skincare plans with Emily at EmCo Esthetics."
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Background video URL (MP4)",
      "info": "Paste a hosted MP4 URL (e.g. uploaded file URL or external host)."
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Poster / fallback image"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show dark overlay",
      "default": true
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Book Now"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "View services"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero video (EmCo)",
      "category": "EmCo"
    }
  ]
}
{% endschema %}
